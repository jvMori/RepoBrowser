<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="repo"
                  type="com.example.jvmori.repobrowser.data.repos.ReposUI"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                style="@style/DarkCardView"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="@{repo.nameOfRepo}"
                        android:layout_width="0dp"
                        android:textAppearance="@style/HeadlineText"
                        android:layout_height="wrap_content" android:id="@+id/repoName"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/repoSize" android:layout_marginEnd="8dp"/>
                <TextView
                        android:text="@{repo.ownerLoginName}"
                        android:textAppearance="@style/BasicText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/autorName"
                        android:layout_marginTop="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/repoName"
                        app:layout_constraintStart_toStartOf="@+id/repoName"
                        app:layout_constraintEnd_toStartOf="@+id/repoSize" android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
                <TextView
                        android:text="@{Integer.toString(repo.sizeOfRepo)}"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/BasicText"
                        android:layout_height="wrap_content" android:id="@+id/repoSize"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toTopOf="@+id/repoName"
                        app:layout_constraintBottom_toBottomOf="@+id/autorName"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>