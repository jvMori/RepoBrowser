<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAppearance">@style/BasicText</item>
    </style>

    <style name="DarkCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="HeadlineText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BasicText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
